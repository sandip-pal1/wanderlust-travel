<% layout("layouts/boilerplate") %>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <!-- Title -->
      <h2 class="text-center mb-4 fw-semibold"><%= listing.title %></h2>

      <div class="card shadow-sm mb-4 overflow-hidden rounded-4">
        <!-- Image -->
        <div style="height: 400px; overflow: hidden">
          <img
            src="<%= listing.image.url %>"
            class="w-100 h-100"
            style="object-fit: cover"
            alt="listing image" />
        </div>

        <!-- Card Body with left padding -->
        <div class="card-body ps-3  mt-2 custom-padding" >
          <!-- Owner & Category -->
          <div class="d-flex justify-content-between align-items-center mb-2">
            <p class="text-muted mb-2">
              Owned by <i><%= listing.owner.username %></i> &nbsp; | &nbsp;
              <span class="badge bg-secondary"><%= listing.category %></span>
            </p>
          </div>

          <!-- Description -->
          <% if (listing.description && listing.description.trim()) { %>
          <p class="mb-3 text-secondary"><%= listing.description %></p>
          <% } %>

          <!-- Price & Location -->
          <ul class="list-unstyled mb-2">
            <li class="mb-1">
              <strong>Price:</strong> â‚¹<%= listing.price.toLocaleString("en-IN")
              %>
            </li>
            <li>
              <strong>Location:</strong> <%= listing.location %>, <%=
              listing.country %>
            </li>
          </ul>
        </div>
      </div>

      <!-- Edit / Delete Buttons -->
      <% if (currUser && currUser._id.equals(listing.owner._id)) { %>
      <div class="d-flex justify-content-between">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark"
          >Edit</a
        >
        <form
          method="POST"
          action="/listings/<%= listing._id %>?_method=DELETE">
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </div>
      <% }  else { %>
  <div class="text-center">
    <a href="/listings/<%= listing._id %>/book" class="btn btn-success">Book Now</a>
  </div>
<% } %>
      
    </div>
  </div>
</div>

<div class="container mt-4 mb-4">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <hr />
      <% if(currUser) { %>
      <h4>Leave a Review</h4>
      <form
        action="/listings/<%= listing.id %>/reviews"
        method="post"
        novalidate
        class="needs-validation">
        <!-- Rating -->
        <div class="mb-3 mt-3">
          <label for="rating" class="form-label">Rating</label>
          <fieldset class="starability-slot">
                    <input
              type="radio"
              id="no-rate"
              class="input-no-rate"
              name="review[rating]"
              value="1"
              checked
              aria-label="No rating." />
            <input
              type="radio"
              id="first-rate1"
              name="review[rating]"
              value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input
              type="radio"
              id="first-rate2"
              name="review[rating]"
              value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input
              type="radio"
              id="first-rate3"
              name="review[rating]"
              value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input
              type="radio"
              id="first-rate4"
              name="review[rating]"
              value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input
              type="radio"
              id="first-rate5"
              name="review[rating]"
              value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
        </div>

        <!-- Comment -->
        <div class="mb-3 mt-3">
          <label for="comment" class="form-label">Comments</label>
          <textarea
            name="review[comment]"
            id="comment"
            cols="30"
            rows="10"
            class="form-control"
            required></textarea>
          <div class="invalid-feedback">
            Please add some comments for review
          </div>
        </div>

        <button class="btn btn-outline-dark">Submit</button>
      </form>
      <hr />
      <% } %>

      <!-- All Reviews Section -->
      <p class="text-center"><b>All Reviews</b></p>
      <div class="row justify-content-center">
        <% for(review of listing.reviews) { %>
        <div class="col-md-5 col-sm-10 mb-4">
          <div class="card h-100 shadow-sm">
            <div class="card-body custom-padding ">
              <h5 class="card-title">@<%= review.author.username %></h5>
              <p class="card-text"><%= review.comment %></p>
              <p class="card-text"><%= review.rating %> stars</p>
              <p
                class="starability-result card-text"
                data-rating="<%= review.rating %>"></p>
            </div>
            <form
              action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=delete"
              method="POST"
              class="text-end px-3 pb-3">
              <button class="btn btn-dark btn-sm">Delete</button>
            </form>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</div>

<!-- Map -->
<div class="mt-5 mb-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div
        id="map"
        style="height: 350px; border-radius: 12px"
        data-coords="<%- JSON.stringify(listing.geometry.coordinates) %>"
        data-title="<%= listing.title %>"
        data-location="<%= listing.location %>"></div>
    </div>
  </div>
</div>
